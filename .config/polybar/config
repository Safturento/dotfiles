[colors]
	dark   = ${xrdb:color0}
	medium = ${xrdb:color3}
	light  = ${xrdb:color7}
	active = ${xrdb:color3}
	alert  = ${xrdb:color1}
	foreground = ${colors.light}
	;background = #000000ff
	background = ${colors.dark}
	text = ${colors.light}
	activeText = ${colors.dark}

[bar/base]
	monitor = ${env:MONITOR:}
	bottom = false

	height = 24
	width = 100%
	
	;width = 1892
	;offset-y = 15
	;offset-x = 14
	;fixed-center = true
	override-redirect = true
	wm-restack = i3

	background = #00ffffff ;${colors.background}
	foreground = ${colors.foreground}

	line-size  = 0
	line-color = ${colors.active}
	
	; Values applied to all borders
	; Individual side values can be defined using:
	;   border-{left,top,right,bottom}-size
	;   border-{left,top,right,bottom}-color
	border-size = 0
	border-bottom-size=0
	border-color = $00ffffff ;${colors.medium}
	;	border-color = ${colors.active}
	radius = 0

	; Number of spaces to add at the beginning/end of the bar
	; Individual side values can be defined using:
	;   padding-{left,right}
	padding-left  = 0
	padding-right = 0

	; Number of spaces to add before/after each module
	; Individual side values can be defined using:
	;   module-margin-{left,right}
	module-margin-left  = 0
	module-margin-right = 

	; Fonts are defined using <font-name>;<vertical-offset>
	; Font names are specified using a fontconfig pattern.
	;   font-0 = NotoSans-Regular:size=8;2
	;   font-1 = MaterialIcons:size=10
	;   font-2 = Termsynu:size=8;-1
	;   font-3 = FontAwesome:size=10
	; See the Fonts wiki page for more details
	font-0 = "envypn:pixelsize=11;1"
	font-1 = "unifont:fontformat=truetype:size=8:antialias=false;0"
	font-2 = "FontAwesome:pixelsize=10;1"

	modules-left   = i3
	modules-center = date
	modules-right  = volume i3lock

	; Enable support for inter-process messaging
	; See the Messaging wiki page for more details.
	enable-ipc = true

	; Fallback click handlers that will be called if
	; there's no matching module handler found.
	click-left   = 
	click-middle = 
	click-right  =
	
	scroll-up    = i3wm-wsnext
	scroll-down  = i3wm-wsprev

[bar/laptop]
	inherit = bar/base
	monitor = ${env:MONITOR:LVDS-1}
	modules-right  = volume battery wlan i3lock

[bar/main]
	inherit = bar/base
	monitor = ${env:MONITOR:DP-3}
	modules-right = 
	modules-center = 

[bar/left]
	inherit = bar/base
	monitor = ${env:MONITOR:DVI-I-1}

	modules-left = i3
	modules-center = 
	modules-right = 

[bar/right]
	inherit = bar/left
	monitor = ${env:MONITOR:DP-2}

	modules-left = i3
	modules-center = 
	modules-right = 

[module/i3]
	type = internal/i3
	ws-icon-0 = 1;Ôâ®
	ws-icon-1 = 2;ÔÑ°
	ws-icon-2 = 3;ÔÉ•
	ws-icon-3 = 4;ÔÑõ
	ws-icon-4 = 5;ÔÑî
	ws-icon-5 = 6;ÔÅã

	format = <label-state> <label-mode>
	index-sort = true
	wrapping-scroll = false
	fuzzy-match = true
	enable-scroll = true
	enable-click=true

	; Only show workspaces on the same output as the bar
	pin-workspaces = true

	label-mode-padding = 1
	label-mode-foreground = ${colors.text}
	label-mode-background = ${colors.background}

	; focused = Active workspace on focused monitor
	label-focused = %icon%
	label-focused-background = ${colors.active}
	label-focused-foreground = ${colors.activeText}
;	label-focused-underline = ${colors.active}
	label-focused-padding = 1

	; unfocused = Inactive workspace on any monitor
	label-unfocused = %icon%
	label-unfocused-padding = 1
	label-unfocused-background = ${colors.background}
	label-unfocused-foreground = ${colors.text}

	; visible = Active workspace on unfocused monitor
	label-visible = %icon%
	label-visible-background = ${colors.active}
	label-visible-foreground = ${colors.activeText}
;	label-visible-underline = ${self.active}
	label-visible-padding = ${self.label-focused-padding}

	; urgent = Workspace with urgency hint set
	label-urgent = %icon%
	label-urgent-background = ${colors.alert}
	label-urgent-foreground = ${colors.activeText}
	label-urgent-padding = 1

[module/dropbox]
	type = custom/script
	exec = ~/.config/polybar/modules/dropbox.py
	interval=2


	label-foreground = ${colors.text}
	label-background = ${colors.background}
	label-padding = 1

[module/battery]
	type = custom/script
	exec = ~/.config/polybar/modules/battery
	click-right = exec xfce4-power-manager -c
	click-left = exec xfce4-power-manager -c
	interval = 1

	label-foreground = ${colors.text}
	label-background = ${colors.background}
	label-padding = 1

[module/volume]
	type = internal/alsa

	format-volume = <label-volume>
	format-volume-padding = 0
	
	label-volume = "ÔÄ® %percentage%"
	label-volume-foreground = ${colors.text}
	label-volume-background = ${colors.background}
	label-volume-padding-left = 2
	label-volume-padding-right = 1
	
	label-muted = "ÔÄ¶ %percentage%"
	label-muted-foreground = ${colors.text
	label-muted-background = ${colors.background}
	label-muted-padding-left = 2
	label-muted-padding-right = 1

	master-mixer = Master
	master-soundcard = hw:0

[module/pavolume]
	type = custom/script
	interval = .10
	label = %output%
	exec = ~/.config/polybar/modules/pavolume.sh
	click-right = pavucontrol
	click-left = ~/.config/polybar/modules/pavolume.sh --togmute
	scroll-up = ~/.config/polybar/modules/pavolume.sh --up
	scroll-down = ~/.config/polybar/modules/pavolume.sh --down

[module/date]
	type = internal/date
	interval = 5

	date = "%A %B %d"
	date-alt = "%Y-%m-%d"

	time = %H:%M
	time-alt = %H:%M:%S

	format-prefix = 
	format-prefix-foreground = ${colors.text}

	label = "It's %time% on %date%"
	label-foreground = ${colors.text}
	label-background = ${colors.background}
	label-padding = 2

[module/cputemp]
	type = custom/script

	format = <label>
	label = CPU %output%¬∞C
	label-underline = ${colors.text}

	label-foreground = ${colors.text}
	label-background = ${colors.background}
	label-padding = 2

	exec = "sensors | grep Physical | gawk '{print $2}' FPAT='[0-9]+'"
	tail=tr
	interval=2

[module/gputemp]
	type = custom/script

	format = GPU <label>¬∞C
	label = %output%
	label-underline = ${colors.text}
	label-foreground = ${colors.text}
	exec = "nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits"
	tail=tr
	interval=2

[module/wlan]
	type = internal/network
	interface = wlp3s0
	interval = 3.0

	format-connected = <label-connected>

	label-connected =Ôá´ %essid%
	label-connected-foreground = ${colors.text}
	label-connected-background = ${colors.background}
	label-connected-padding = 1

	label-disconnected = Ôá´
	label-disconnected-foreground = ${colors.text}
	label-disconnected-background = ${colors.background}
	label-disconnected-padding = 1

	click-right = exec nm-connection-editor
	click-left = exec nm-connection-editor

[module/keyboard]
	type = custom/script
	exec = ~/.config/polybar/modules/keyboard
	click-right = ~/.config/polybar/modules/keyboard toggle
	interval = 1

	label-foreground = ${colors.text}
	label-background = ${colors.background}
	label-padding = 1

[module/i3lock]
