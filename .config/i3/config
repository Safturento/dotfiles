set $mod Mod4
set $alt Mod1

exec_always setxkbmap -option caps:super #make capslock also a super
exec_always xset fp+ /usr/share/fonts/envypn
exec_always xset fp+ /usr/share/fonts/bitmap
exec_always xset fp+ ~/Github/scientifica/regular
exec_always xset fp rehash

floating_modifier $mod
gaps inner 15
#smart_gaps on
#smart_borders on

