## quake style terminal launched into a custom tmux session
exec urxvt -name quake -e $SHELL -c 'tmuxinator start quake; $SHELL -i' &
for_window [instance="quake"] floating enable;
for_window [instance="quake"] move scratchpad; [instance="quake"] scratchpad show; move position 15px 65px; resize set 1890 350; move scratchpad
bindsym $mod+$alt+Return [instance="quake"] scratchpad show

# launch an jupyter notebook server
exec tmuxinator start jupyter

bar {
	height 50
	mode dock
	position top
}

